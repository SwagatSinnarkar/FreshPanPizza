@{
    var dt = DateTime.Now;
    string date = dt.ToString("dd-MM");
    string time = dt.ToString("HH:mm");
}

<div class="d-flex flex-wrap gap-2">
    <div>
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1005">
            <div id="liveToast" class="toast fade" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <img src="/assets/images/PizzaLogo/logo.png" class="me-2" alt="logo" height="18">
                    <strong class="me-auto" style="color:black !important">Notification</strong>
                    <small style="color:black">@time</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body" style="color:black">
                </div>
            </div>
        </div>
    </div>
</div>